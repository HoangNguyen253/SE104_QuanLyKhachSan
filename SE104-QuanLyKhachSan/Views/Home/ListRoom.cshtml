<link rel='stylesheet' type='text/css' media='screen' href='~/css/ListRoom/ListRoom.css'>


@{
    Database db = new Database();
    Database db2 = new Database();
    List<LoaiPhong> listLoaiPhong = ViewData["listLoaiPhong"] as List<LoaiPhong>;
    List<Phong> listPhong = ViewData["listPhong"] as List<Phong>;
    listPhong = db.getAllDetailRoom();
    listLoaiPhong = db2.getAllRoomStyle();
    var idTrangThai = 0;
    int idLoaiPhong = 0;

}
 <div class="tracuuphong_main_window">

                <div id="tracuuphong_tool_bar" class="tracuu_header">
                    <div class="add_role tracuu_header">
                        <button type="button" class="tracuu_btn" id="tracuuphong"> + Thêm mới</button>
                    </div>
                    
                    <div class="search tracuu_header">
                        <input type="text" placeholder="Tìm kiếm">  
                        <i class="fa fa-search"></i>
                    </div>
                </div>

                <div class="main_window__table_room">
                    <table class="list_room">
                        <!-- Nhóm các column -->
                        <colgroup>
                            <col span="1" style="width: 20%">
                            <col span="1" style="width: 20%">
                            <col span="1" style="width: 10%">
                            <col span="1" style="width: 20%">
                            <col span="1" style="width: 20%">
                            <col span="1" style="width: 10%">
                            <col span="1" style="width: 5%">
                        </colgroup>

                        <!-- Content thead, tbody -->
                        <thead class="list_room_heading">
                            <tr>
                                <th scope="col" class="heading_cell">Mã phòng</th>
                                <th scope="col" class="heading_cell">Loại phòng</th>
                                <th scope="col" class="heading_cell">Tầng</th>
                                <th scope="col" class="heading_cell">Trạng thái</th>
                                <th scope="col" class="heading_cell">Ghi chú</th>
                                <th scope="col" class="heading_cell"></th>
                                <th scope="col" class="heading_cell"></th>
                            </tr>
                        </thead>

                        <tbody class="list_room_body">
                @{
                    foreach (var pi in listPhong)
                    {
                                            <tr>
                                                <td class="data_cell">@pi.MaPhong</td>
                                                <td class="data_cell">@pi.TenLoaiPhong</td> 
                                                <td class="data_cell">@pi.Tang</td>
                                                <td class="data_cell">@pi.TrangThai</td>
                                                <td class="data_cell">@pi.GhiChu</td>
                                                <td class="data_cell">
                                                    <button class="room_body_item__angle_button btn sua">
                                                        Sửa
                                                    </button>
                                                </td>
                                                <td class="data_cell">
                                                    <button class="room_body_item__angle_button btn">
                                                        Xóa
                                                    </button>
                                                </td>
                                            </tr>
                    }
                }
                         
                        </tbody>
                    </table>
                </div>

  </div>

          <!-- popup_room -->
        <form class="room_profile_popup_window_container" id="room_profile_popup_window_container_id"  method = "POST">
          <div class="room_profile_popup_window">
                <div class="header_room_profile_popup_window">
                    <div class="header_name_room_profile_popup_window">Thêm phòng</div>
                    <i class="fa fa-close header_close_room_profile_popup_window" style="font-size: 1.5rem;" id="header_close_room_profile_popup_window_id"></i>
                </div>

                <div class="body_room_profile_popup_window">
                    <div class="content_room_profile_popup_window">
                        <div class="code_room_profile_popup_window" id="code_room_profile_popup_window">
                            <p>Mã phòng:</p>

                            <input type="number" name="MaPhong" id="MaPhong">

                        </div>
                        
                        <div class="information_field_room_profile_popup_window">
                            <div class="info_room_profile_popup_window">
                                <div class="name_part_info_room_profile_popup_window">Thông tin phòng</div>
                            </div>
                            
                            <div class="data_info_room_profile_popup_window_container">

                                <div class="data_info_room_profile_popup_window">
                                    <p>Tầng:</p>

                                    <input type="number" class="input_data_info_staff_profile_popup_window" name="Tang" id="Tang">
                                
                                </div>

                                <div class="data_info_room_profile_popup_window">
                                    <p>Trạng thái:</p>

                                    <select class="input_data_info_staff_profile_popup_window" name="TrangThai" id="TrangThai"> 

                                        <option value="">Phòng trống @(idTrangThai = 0)</option>
                                        <option value="">Đang thuê @(idTrangThai = 1)</option>
                                        <option value="">Đang sửa chữa @(idTrangThai = 2)</option>
                                        <option value="">Khách ra ngoài @(idTrangThai = 3)</option>
                                        <option value="">Đang dọn dẹp @(idTrangThai = 4)</option>
                                        <option value="">Không hoạt động @(idTrangThai = 5)</option>

                                    </select>
                                 
                                </div>

                                <div class="data_info_room_profile_popup_window">
                                    <p>Số phòng:</p>
                                    <input type="number" id="SoPhong" class="input_data_info_staff_profile_popup_window" name="SoPhong">
                                </div>

                                <div class="data_info_room_profile_popup_window">
                                    <p>Ghi chú:</p>
                                    <textarea name="GhiChu" id="GhiChu" cols="10" rows="1" placeholder="Ghi chú" class="input_data_info_staff_profile_popup_window"></textarea>
                                </div>

                                <div class="data_info_room_profile_popup_window">
                                    <p>Loại phòng:</p>
                                    <select name="LoaiPhong" id="LoaiPhong" class="input_data_info_staff_profile_popup_window">
                                @{

                                    foreach (var pi in listLoaiPhong)
                                    {

                                        <option value="">@pi.TenLoaiPhong</option>

                                        @(idLoaiPhong = pi.MaLoaiPhong) ;

                                    }                     
                                }
     
                                    </select>
                                </div>
                                
                            </div>

                        </div>

                    </div>
                </div>

                <div class="footer_room_profile_popup_window">
                    <button type="submit" id="add_info_popup_window_room_button"  name="btn_add_room"> Thêm </button>
                    <button id = "close_popup_window_room_button" type="button">Thoát</button>
                </div>
            </div>
           
        </form>
  <script src="~/js/ListRoom/ListRoom.js"></script>


<script src="https://ajax.googleapis.com/ajax/libs/jquery/1.10.0/jquery.min.js"></script>

     